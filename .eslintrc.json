{
  "env": {
    "browser": true,
    "es2021": true
  },

  "extends": [
    "airbnb",
    "airbnb/hooks",
    "airbnb/rules/react",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],

  "overrides": [],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "plugins": ["react", "prettier", "import"],

  "rules": {
    "react/react-in-jsx-scope": 0,
    "import/no-extraneous-dependencies": 0,
    "react/prop-types": ["off"]
  }
}
